<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_baseline_person_24"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:id="@+id/user_profile_icon"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_notifications_none_24"
                android:layout_toLeftOf="@+id/user_profile_icon"
                android:layout_marginTop="30dp"
                android:id="@+id/notification_icon"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_menu_24"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:id="@+id/menu_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hello_textview"
                android:layout_below="@+id/menu_icon"
                android:text="Hello"
                android:textSize="36sp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reader_textview"
                android:text="Reader"
                android:textSize="36sp"
                android:layout_toRightOf="@+id/hello_textview"
                android:layout_below="@+id/menu_icon"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/search_edittext"
                android:layout_below="@id/hello_textview"
                android:background="@drawable/search_background"
                android:padding="20dp"
                android:layout_margin="20dp"
                android:hint="Search"
                android:elevation="2dp"
                android:textSize="24sp"
                android:paddingLeft="20dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/category_rv"
                android:layout_below="@id/search_edittext"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nearby_book_rv"
                android:layout_below="@id/category_rv"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/suggested_book_rv"
                android:layout_below="@id/nearby_book_rv"/>

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/pbLoading"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:text="Get Location"
                android:id="@+id/getLocationButton"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>